    "gl-matrix": "^3.4.3",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^4.3.8",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6",
    "typedoc": "^0.22.11",
    "typescript": "^4.5.5",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2",
